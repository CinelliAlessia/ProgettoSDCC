FROM golang:latest

WORKDIR /main

# Copio e scarico le dipendenze del modulo Go
COPY go.mod .
COPY go.sum .

RUN go mod download
RUN go get -u github.com/fatih/color

# Copio il resto del codice sorgente
COPY go.work .
COPY common common
COPY server server

WORKDIR /main/server

# Avvia il tuo server Go
CMD ["bash", "-c", "go run ."]